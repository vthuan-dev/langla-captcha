<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>langla_duky</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Tesseract" Version="5.2.0" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <Target Name="CopyTessdata" AfterTargets="Build">
    <ItemGroup>
      <TessdataFiles Include="tessdata\**\*" />
    </ItemGroup>
    <Copy SourceFiles="@(TessdataFiles)" DestinationFolder="$(OutputPath)tessdata\%(RecursiveDir)" SkipUnchangedFiles="true" />
  </Target>

</Project>
